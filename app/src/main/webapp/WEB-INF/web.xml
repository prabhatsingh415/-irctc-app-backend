<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>Ticket Booking App</display-name>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <!-- user Login Servlet Configuration -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>org.example.Servlets.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- SearchTrain Servlet Configuration -->
    <servlet>
        <servlet-name>SearchTrainServlet</servlet-name>
        <servlet-class>org.example.Servlets.SearchTrainServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SearchTrainServlet</servlet-name>
        <url-pattern>/searchTrain</url-pattern>
    </servlet-mapping>


   <!--   user Signup Configuration-->
    <servlet>
        <servlet-name>UserAuthServlet</servlet-name>
        <servlet-class>org.example.Servlets.UserAuthServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserAuthServlet</servlet-name>
        <url-pattern>/SignUp</url-pattern>
    </servlet-mapping>

    <!--   BookTicket functionality Configuration-->
    <servlet>
        <servlet-name>BookTicketServlet</servlet-name>
        <servlet-class>org.example.Servlets.BookTicketServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>BookTicketServlet</servlet-name>
        <url-pattern>/bookTicket</url-pattern>
    </servlet-mapping>

    <!--   CancelTicket functionality Configuration-->
    <servlet>
        <servlet-name>CancelTicketServlet</servlet-name>
        <servlet-class>org.example.Servlets.CancelTicketServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CancelTicketServlet</servlet-name>
        <url-pattern>/cancelTicket</url-pattern>
    </servlet-mapping>
</web-app>

